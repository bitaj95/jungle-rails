<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Below is a summary of your purchase.</h4>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <tr>
            <td><%= image_tag item.product.image.tiny %></td>
            <td><%= item.product.description %></td>
            <td><%= humanized_money_with_symbol item.product.price %></td>
            <td><%= item.quantity %></td>
            <td><%= humanized_money_with_symbol item.product.price * item.quantity %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="5">
            TOTAL:

            <%= humanized_money_with_symbol @order.total_cents/100.00 %>
          </th>
        </tr>
        <tr>
          <th colspan="5">
            Email:
            <%= @order.email%>
          </th>
        </tr>
      </tfoot>
        

    </table>
  </div>


  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
